{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6", //output is es6 modules
        "rootDir": "./src",
        "baseUrl": "./src",
        "outDir": "./dist",
        "declaration": true, //type declaration files (.d.ts)
        "sourceMap": true, //for debugging
        "esModuleInterop": false, //es6 and cjs can communicate
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        // "src/tinycolor.js" //From https://raw.githubusercontent.com/bgrins/TinyColor/master/npm/esm/tinycolor.js
    ]
}