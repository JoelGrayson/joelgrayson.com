generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    email     String   @unique
    name      String?
}

model Article {
    id   String @id @default(cuid())
    name String //for import(`components/articles/${name}`) and URL `/perspective/${name}`
}
